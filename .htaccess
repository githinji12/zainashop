# Prevent directory listing
Options -Indexes

# Block access to sensitive files
<FilesMatch "\.(env|ini|log|sh|sql|sqlite|git|htaccess|htpasswd)$">
    Require all denied
</FilesMatch>

# Deny access to includes/ folder from web
RewriteEngine On
RewriteRule ^includes/ - [F,L]

